

<div class = "jumbotron"><h1>Eat Da Burger!</h1>
<div class="burgerpicture">&nbsp;</div>


</div>

<br><br>

<div class="container">
  <div class="row">
    <div class="col-sm-6">

      <h2>Burgers On Offer</h2>

    </div>
    <div class="col-sm-6">

    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <div>
        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <button type="submit" class='eaten'> {{this.burger_name}}</button>
        </form>
      </div>
      {{/unless}} {{/each}}

    </ul>

  <br><br>

<div class="row">

    <div class="col-sm-12">
    <h2>Burgers Eaten</h2>
    </div>
    <div class="col-sm-6" id = "chorizo">
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <div class= "burgerEaten">
        <div>
          {{this.burger_name}}
        </div>
      </div>
      {{/if}} {{/each}}
    </ul>
    </div>
</div>

<br><br>

<div class="row">
    <div class="col-sm-12">


      <h2>Add a Burger</h2>

      </div>

      <br>
      <div class="col-sm-5">

      <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="What'll it be?">
      <button type="submit" class="addBurgerButton">Add A Burger!</button>
    </form>
      </div>
    </div>